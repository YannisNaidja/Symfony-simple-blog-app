{% extends "base.html.twig" %}

{% block body %}
<div class="centeredContainer">
   <h1>
      Inscription
   </h1>
   {{ form_start(form) }}
   {{ form_row(form.username,{'label' : 'Nom d\'utilisateur','attr' : { 'placeholder' : 'Nom d\'utilisateur ...'}} ) }}
   {{ form_row(form.email,{'label' : 'Email','attr' : { 'placeholder' : 'Adresse E-Mail ...'}}) }}
   {{ form_row(form.password,{'label' : 'Mot de passe','attr' : { 'placeholder' : 'Mot de passe ...'}}) }}
   {{ form_row(form.confirm_password,{'label' : 'Confirmation du mot de passe','attr' : { 'placeholder' : 'Mot de passe ...'}}) }}
   {{ form_widget(form) }}
   <button type="submit" class="btn btn-success">Inscription</button>
   {{ form_end(form) }}
</div>
{% endblock %}